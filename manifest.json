{
    "name": "Jellyfin",
    "id": "jellyfin",
    "packaging_format": 1,
    "description": {
        "en": "Jellyfin package for YunoHost.",
        "fr": "Jellyfin pour YunoHost."
    },
    "version": "10.3.7.1",
    "url": "https://jellyfin.github.io/",
    "license": "free",
    "maintainer": {
        "name": "spooknik",
        "email": "steven@spooknik.site"
    },
    "requirements": {
        "yunohost": ">= 2.7.2"
    },
    "multi_instance": false,
    "services": [
        "nginx",
        "php5-fpm",
        "mysql"
    ],
    "arguments": {
        "install": [{
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for Jellyfin",
                    "fr": "Choisissez un nom de domaine pour Jellyfin"
                },
                "example": "example.com"
            },

            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Jellyfin only /emby is accepted",
                    "fr": "Choisissez un chemin pour Jellyfin seulement /emby est accept√©"
                },
                "example": "/emby",
                "default": "/emby"
            },
            
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public site ?",
                    "fr": "Est-ce un site public ?"
                },
                "default": "true"
            }
        ]
    }
}
